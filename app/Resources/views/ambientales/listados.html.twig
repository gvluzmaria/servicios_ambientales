{% extends 'standard.html.twig' %}
{% block page_title %}{{ (group ~ '.' ~ entityType ~ '.list')|trans }}{% endblock %}
{% block title %}{{ (group ~ '.' ~ entityType ~ '.plural')|trans }}{% endblock %}
{% block body %}
    <!-- Blog Post -->
    <div class="card mb-4">
        <!--<img class="card-img-top" src="http://placehold.it/750x300" alt="Card image cap">-->
        {%- if entityType == 'noticia_ambiental' -%}
            <div class="card-body">
                <h2 class="card-title">{{ entity.titular }}</h2>
                <p class="card-text">{{ entity.descripcion }}</p>
                <a href="{{ path(entityType ~ '_detail', { 'id': entity.id }) }}" class="btn btn-primary">Leer m√°s... &rarr;</a>
            </div>
            <div class="card-footer text-muted">
                Publicado el
                {% if entity.fechaPublicacion is not null %}
                    {{ entity.fechaPublicacion|date('d/m/Y') }}
                {% else %}
                    -
                {% endif %}
                por {{ entity.usuario }}
            </div>
        {% endif %}
    </div>
{% endblock %}

