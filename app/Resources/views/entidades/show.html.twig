{% extends 'admin.html.twig' %}
{% block page_title %}{{ ('entidades.' ~ entityType ~ '.show')|trans }}{% endblock %}
{% block title %}{{ ('entidades.' ~ entityType ~ '.show')|trans }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light portlet-fit bordered">
                <div class="portlet-body">
                    <div class="tabbable">
                        <div class="form-body">
                            <table class="table table-striped table-hover">
                                <thead>
                                <tr>
                                    <th></th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                {%- if entityType == 'capital_humano' -%}
                                    <tr>
                                        <th>{{ ('entidades.' ~ entityType ~ '.name')|trans }}</th>
                                        <td>{{ entity.nombre|default('-') }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ ('entidades.' ~ entityType ~ '.curriculum')|trans }}</th>
                                        <td>{{ entity.resumenCurricular|default('-') }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ ('entidades.' ~ entityType ~ '.picture')|trans }}</th>
                                        <td>{{ entity.foto|default('-') }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ ('entidades.' ~ entityType ~ '.email')|trans }}</th>
                                        <td>{{ entity.correo|default('-') }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ ('entidades.' ~ entityType ~ '.job')|trans }}</th>
                                        <td>{{ entity.cargo|default('-') }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ ('entidades.' ~ entityType ~ '.docente_category')|trans }}</th>
                                        <td>{{ entity.categoriaDocente|default('-') }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ ('entidades.' ~ entityType ~ '.cientific_category')|trans }}</th>
                                        <td>{{ entity.categoriaCientifica|default('-') }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ ('entidades.' ~ entityType ~ '.investigative_category')|trans }}</th>
                                        <td>{{ entity.categoriaInvestigativa|default('-') }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ ('entidades.' ~ entityType ~ '.company')|trans }}</th>
                                        <td>{{ entity.empresa|default('-') }}</td>
                                    </tr>
                                {% endif %}
                                {%- if entityType == 'empresa' -%}
                                    <tr>
                                        <th>{{ ('entidades.' ~ entityType ~ '.name')|trans }}</th>
                                        <td>{{ entity.nombreEmpresa|default('-') }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ ('entidades.' ~ entityType ~ '.email')|trans }}</th>
                                        <td>{{ entity.correo|default('-') }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ ('entidades.' ~ entityType ~ '.phone_number')|trans }}</th>
                                        <td>{{ entity.telefonos|default('-') }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ ('entidades.' ~ entityType ~ '.address')|trans }}</th>
                                        <td>{{ entity.direccion|default('-') }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ ('entidades.' ~ entityType ~ '.info')|trans }}</th>
                                        <td>{{ entity.infoGeneral|default('-') }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ ('entidades.' ~ entityType ~ '.social_objective')|trans }}</th>
                                        <td>{{ entity.objetoSocial|default('-') }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ ('entidades.' ~ entityType ~ '.center_structure')|trans }}</th>
                                        <td>{{ entity.estructuraCentro|default('-') }}</td>
                                    </tr>
                                {% endif %}
                                {%- if entityType == 'eventocsa' -%}
                                    <tr>
                                        <th>{{ ('entidades.' ~ entityType ~ '.name')|trans }}</th>
                                        <td>{{ entity.nombre|default('-') }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ ('entidades.' ~ entityType ~ '.init_date')|trans }}</th>
                                        <td>
                                            {% if entity.fechaInicial is not null %}
                                                {{ entity.fechaInicial|date('d/m/Y') }}
                                            {% else %}
                                                -
                                            {% endif %}
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>{{ ('entidades.' ~ entityType ~ '.end_date')|trans }}</th>
                                        <td>
                                            {% if entity.fechaFinal is not null %}
                                                {{ entity.fechaFinal|date('d/m/Y') }}
                                            {% else %}
                                                -
                                            {% endif %}
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>{{ ('entidades.' ~ entityType ~ '.description')|trans }}</th>
                                        <td>{{ entity.descripcion|default('-') }}</td>
                                    </tr>
                                    <tr>
                                        <th>{{ ('entidades.' ~ entityType ~ '.contacts')|trans }}</th>
                                        <td>{{ entity.contactos|default('-') }}</td>
                                    </tr>
                                {% endif %}
                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-12" id="button_actions">
                            <a class="btn btn-primary btn-sm"
                               href="{{ path(entityType ~ '_edit', { 'id': entity.id }) }}">
                                <i class="fa fa-edit"></i> {{ 'actions.edit'|trans }}</a>
                            <a class="btn btn-default btn-sm" href="{{ path(entityType ~ '_index') }}">
                                <i class="fa fa-chevron-left"></i> {{ 'actions.list'|trans }}</a>
                            <a data-id="{{ entity.id }}" data-action="{{ entityType }}_delete"
                               class="btn btn-danger btn-sm delete-selection" href="{{ path(entityType ~ '_delete', { 'id': entity.id }) }}">
                                <i class="fa fa-trash"></i> {{ 'actions.delete'|trans }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
