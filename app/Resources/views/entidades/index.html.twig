{% extends 'admin.html.twig' %}
{% block page_title %}{{ ('entidades.' ~ entityType ~ '.list')|trans }}{% endblock %}
{% block title %}{{ ('entidades.' ~ entityType ~ '.list')|trans }}{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light portlet-fit bordered">
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="btn-group">
                                    <button class="btn btn-primary btn-sm"
                                            onclick="location.href = '{{ path(entityType ~ '_new') }}'">
                                        <i class="fa fa-plus"></i> {{ ('entidades.' ~ entityType ~ '.create')|trans }}
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <table class="table table-striped table-bordered dataTable" role="grid" id="table-datatable">
                        <thead>
                        <tr role="row">
                            {%- if entityType == 'capital_humano' -%}
                                <th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 10%;" aria-label="Name: activate to sort column descending" aria-sort="ascending">{{ ('entidades.' ~ entityType ~ '.name')|trans }}</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 10%;" aria-label="Name: activate to sort column descending" aria-sort="ascending">{{ ('entidades.' ~ entityType ~ '.curriculum')|trans }}</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 10%;" aria-label="Name: activate to sort column descending" aria-sort="ascending">{{ ('entidades.' ~ entityType ~ '.picture')|trans }}</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 10%;" aria-label="Name: activate to sort column descending" aria-sort="ascending">{{ ('entidades.' ~ entityType ~ '.email')|trans }}</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 10%;" aria-label="Name: activate to sort column descending" aria-sort="ascending">{{ ('entidades.' ~ entityType ~ '.job')|trans }}</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 10%;" aria-label="Name: activate to sort column descending" aria-sort="ascending">{{ ('entidades.' ~ entityType ~ '.docente_category')|trans }}</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 10%;" aria-label="Name: activate to sort column descending" aria-sort="ascending">{{ ('entidades.' ~ entityType ~ '.cientific_category')|trans }}</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 10%;" aria-label="Name: activate to sort column descending" aria-sort="ascending">{{ ('entidades.' ~ entityType ~ '.investigative_category')|trans }}</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 10%;" aria-label="Name: activate to sort column descending" aria-sort="ascending">{{ ('entidades.' ~ entityType ~ '.company')|trans }}</th>
                            {% endif %}
                        </tr>
                        </thead>
                        <tbody>
                        {% if entities|length > 0 %}
                        {% for entity in entities %}
                            <tr role="row">
                                {%- if entityType == 'capital_humano' -%}
                                    <td>
                                        <a href="{{ path(entityType ~ '_show', { 'id': entity.id }) }}">
                                            {{ entity.nombre }}
                                        </a>
                                    </td>
                                    <td>
                                        {{ entity.resumenCurricular }}
                                    </td>
                                    <td>
                                        {{ entity.foto }}
                                    </td>
                                    <td>
                                        {{ entity.correo }}
                                    </td>
                                    <td>
                                        {{ entity.cargo }}
                                    </td>
                                    <td>
                                        {{ entity.categoriaDocente }}
                                    </td>
                                    <td>
                                        {{ entity.categoriaCientifica }}
                                    </td>
                                    <td>
                                        {{ entity.categoriaInvestigativa }}
                                    </td>
                                    <td>
                                        {{ entity.empresa }}
                                    </td>
                                {% endif %}
                                <td align="center">
                                    <div>
                                        <a href="{{ path(entityType ~ '_show', { 'id': entity.id }) }}"
                                           class="btn btn-success btn-sm tooltips" data-container="body"
                                           data-original-title="{{ 'actions.show'|trans }}" style="margin-right: auto">
                                            <i class="fa fa-eye"></i></a>
                                        <a href="{{ path(entityType ~ '_edit', { 'id': entity.id }) }}"
                                           class="btn btn-primary btn-sm tooltips" data-container="body"
                                           data-original-title="{{ 'actions.edit'|trans }}" style="margin-right: auto">
                                            <i class="fa fa-edit"></i></a>
                                        <a data-id="{{ entity.id }}"
                                           href="{{ path(entityType ~ '_delete', { 'id': entity.id }) }}" class="btn btn-danger btn-sm tooltips delete-selection"
                                           data-container="body" data-original-title="{{ 'actions.delete'|trans }}">
                                            <i class="fa fa-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
